  <h2 class="h2 mb-10 md:mb-20 text-center">//fragments</h2>
  <div class="flex flex-col-reverse md:flex-row gap-10 md:gap-20 max-w-4xl lg:max-w-6xl w-full items-center justify-center">
    {/* Left: Text and Button */}
    <div class="w-full md:w-1/2 flex flex-col items-center md:items-start text-center md:text-left gap-4 px-4 md:px-0">
