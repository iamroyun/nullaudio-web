---
export interface Props {
  image: string;
  title: string;
  category: string;
}

const { 
  image,
  title,
  category
} = Astro.props;
---

<style>
  .sample-card {
    filter: grayscale(1);
    transition: filter 0.3s ease;
  }
  
  .sample-card:hover {
    filter: grayscale(0);
  }
</style>

<div
  class="sample-card relative aspect-square bg-neutral-950 border border-white/10 rounded-lg overflow-hidden transition hover:border-white/20 group"
  style={`background-image: url('${image}'); background-size: cover; background-position: center;`}
>
  <!-- Dark overlay for text readability -->
  <div class="absolute inset-0 bg-black/40"></div>
  
  <!-- Category Tag (top-left) -->
  <span
    class="absolute top-3 left-3 text-xs text-white px-2 py-1 rounded bg-[#6A7CFF] z-10"
  >
    {category}
  </span>

  <!-- Play Button (center) -->
  <div class="absolute inset-0 flex items-center justify-center z-10">
    <button
      class="w-12 h-12 sm:w-16 sm:h-16 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-full flex items-center justify-center transition-all duration-200 hover:scale-110"
      aria-label="Play sample preview"
    >
      <svg
        class="w-5 h-5 sm:w-6 sm:h-6 text-white ml-0.5"
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path d="M8 5v14l11-7z"/>
      </svg>
    </button>
  </div>

  <!-- Sample Name (bottom-right) -->
  <div class="absolute bottom-3 right-3 z-10">
    <p class="text-sm sm:text-base text-white font-medium uppercase">{title}</p>
  </div>
</div>